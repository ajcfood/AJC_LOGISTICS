order by		CASE WHEN MAX(OVERALL_CREDIT_LIMIT) > 0 
                     THEN MAX(OVERALL_CREDIT_LIMIT) - SUM(AMOUNT_DUE_REMAINING)
                         ELSE MAX(OVERALL_CREDIT_LIMIT) 
                  END


